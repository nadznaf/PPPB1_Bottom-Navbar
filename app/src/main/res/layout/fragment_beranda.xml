<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BerandaFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_home1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="32dp"
        android:text="Selamat Malam, Ikhwan Hanif Fridauz"
        android:fontFamily="@font/poppins_regular"
        android:textColor="#777777"/>

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="170dp"
        android:layout_height="116dp"
        android:layout_marginStart="32dp"
        android:src="@drawable/logo"
        />
    <TextView
        android:id="@+id/tv_home2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:text="Saldo"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="32dp">
        <TextView
            android:layout_width="56dp"
            android:layout_height="2dp"
            android:background="@color/primary"
            android:visibility="visible" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:visibility="visible" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        android:elevation="10dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="10dp"
        >
        <TextView
            android:id="@+id/card_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingHorizontal="16dp"
            android:text="IKHWAN HANIF FRIDAUZ"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_regular"
            android:drawableEnd="@drawable/baseline_copy"
            />
        <TextView
            android:id="@+id/card_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingHorizontal="16dp"
            android:text="BNI Taplus Muda | 7263-2938-2390-****"
            android:textSize="11sp"
            android:fontFamily="@font/poppins_regular"
            android:drawableEnd="@drawable/baseline_more"
            />
        <TextView
            android:id="@+id/card_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:paddingHorizontal="16dp"
            android:text="Rp ********"
            android:textSize="32sp"
            android:fontFamily="@font/poppins_bold"
            android:drawableEnd="@drawable/baseline_eye"
            android:drawablePadding="16dp"
            />
        <Button
            android:id="@+id/card_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="144dp"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"
            android:backgroundTint="@color/primary"
            android:elevation="8dp"
            android:text="Tarik Tunai"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/card_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="144dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="160dp"
            android:backgroundTint="@color/primary"
            android:elevation="8dp"
            android:text="Setor Tunai"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_home3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="32dp"
        android:text="Sortcut Kamu"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/grid_card1"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="27dp"
            android:elevation="10dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="10dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:src="@drawable/baseline_coin"
                app:tint="@color/primary" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="46dp"
                android:text="Transfer Uang"
                android:gravity="center"
                android:fontFamily="@font/poppins_regular"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/grid_card2"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginEnd="32dp"
            android:elevation="10dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="10dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:src="@drawable/baseline_card"
                app:tint="@color/primary" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="42dp"
                android:text="Virtual Account"
                android:gravity="center"
                android:fontFamily="@font/poppins_regular"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/grid_card3"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="27dp"
            android:elevation="10dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="10dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:src="@drawable/baseline_smartphone"
                app:tint="@color/primary" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="54dp"
                android:text="Pulsa / Data"
                android:gravity="center"
                android:fontFamily="@font/poppins_regular"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/grid_card4"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginEnd="32dp"
            android:elevation="10dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="10dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:src="@drawable/baseline_more"
                app:tint="@color/primary" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="46dp"
                android:text="Menu Lengkap"
                android:gravity="center"
                android:fontFamily="@font/poppins_regular"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_home4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="32dp"
        android:text="Insight BNI"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_bold"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:importantForAccessibility="no">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="85dp"
                android:layout_marginStart="32dp"
                android:src="@drawable/insight1" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="85dp"
                android:layout_marginStart="34dp"
                android:src="@drawable/insight2" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="85dp"
                android:layout_marginStart="34dp"
                android:src="@drawable/insight1" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="85dp"
                android:layout_marginStart="34dp"
                android:src="@drawable/insight2" />
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>